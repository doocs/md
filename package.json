{
  "name": "md",
  "type": "module",
  "version": "1.6.0",
  "private": false,
  "scripts": {
    "start": "npm run dev",
    "dev": "vite --host",
    "build": "run-p type-check \"build:only {@}\" --",
    "build:only": "vite build",
    "build:h5-netlify": "cross-env SERVER_ENV=NETLIFY type-check vite build",
    "build:cli": "npm run build && npm run shx rm -rf md-cli/dist && npm run shx rm -rf dist/**/*.map && npm run shx cp -r dist md-cli/ && cd md-cli && npm run pack",
    "build:analyze": "cross-env ANALYZE=true vite build",
    "preview": "npm run build && vite preview",
    "release:cli": "node ./bin/release.js",
    "lint": "eslint . --fix",
    "type-check": "vue-tsc --build --force",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^11.1.0",
    "axios": "^1.7.7",
    "buffer-from": "^1.1.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "codemirror": "^5.65.17",
    "core-js": "^3.38.1",
    "cos-js-sdk-v5": "^1.8.4",
    "crypto-js": "^4.2.0",
    "csstype": "^3.1.3",
    "element-plus": "^2.8.3",
    "es-toolkit": "^1.19.0",
    "form-data": "4.0.0",
    "highlight.js": "^11.10.0",
    "juice": "^11.0.0",
    "lucide-vue-next": "^0.441.0",
    "marked": "^14.1.2",
    "mermaid": "^11.2.1",
    "minio": "7.1.3",
    "node-fetch": "^3.3.2",
    "pinia": "^2.2.2",
    "qiniu-js": "^3.4.2",
    "radix-vue": "^1.9.5",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "tiny-oss": "^0.5.1",
    "uuid": "^10.0.0",
    "vue": "^3.5.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.6.2",
    "@types/buffer-from": "^1.1.3",
    "@types/codemirror": "^5.60.15",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.5.5",
    "@types/uuid": "^10.0.0",
    "@unocss/eslint-plugin": "^0.62.4",
    "@vitejs/plugin-vue": "^5.1.3",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.10.0",
    "eslint-plugin-format": "^0.1.2",
    "less": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.2",
    "unocss": "^0.62.4",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.6",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-vue-devtools": "^7.4.5",
    "vue-tsc": "^2.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "npm run lint"
  }
}
